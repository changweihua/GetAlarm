<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:clipToPadding="true"
	android:fitsSystemWindows="true"
	tools:context="net.cmono.getalarm.MainActivity"
	tools:ignore="MergeRootFrame">

	<LinearLayout
		android:layout_width="match_parent"
		android:background="@color/statusBarBGColor"
		android:layout_height="@dimen/statusBarHeight">

		<ImageButton
			android:id="@+id/about_us_back"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:background="@color/statusBarBGColor"
			android:onClick="btnBackClick"
			android:src="@drawable/ic_back_normal" />

		<!-- <TextView android:id="@+id/about_us_back" android:layout_width="48dp" 
			android:layout_height="48dp" android:layout_gravity="center_vertical" android:layout_marginLeft="10dp" 
			android:paddingBottom="@dimen/activity_vertical_margin" android:paddingTop="@dimen/activity_vertical_margin" 
			android:onClick="btnBackClick" android:text="&#xf100;" android:textColor="#FFFFFF" 
			/> -->

		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/tv_appName"
			android:layout_height="48dp"
			android:layout_gravity="center_vertical"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin"
			android:layout_marginTop="0dp"
			android:background="@color/statusBarBGColor"
			android:text="@string/app_display_name"
			android:textColor="#FFFFFF" />

		<!-- <com.wang.avi.AVLoadingIndicatorView
			android:id="@+id/avloadingIndicatorView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="visible"
			app:indicator="BallPulse"
			app:indicator_color="#000000" /> -->

		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/tv_actionName"
			android:layout_height="48dp"
			android:layout_gravity="center_vertical"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin"
			android:layout_marginTop="0dp"
			android:background="@color/statusBarBGColor"
			android:text="页面"
			android:textColor="#FFFFFF" />

	</LinearLayout>

</FrameLayout>

